techhelp.massforma.ru {
	encode gzip zstd

	reverse_proxy bot:8080 {
		header_up Host {host}
		header_up X-Real-IP {http.request.remote.host}
		header_up X-Forwarded-For {http.request.remote.host}
		header_up X-Forwarded-Proto {scheme}

		transport http {
			read_buffer 0
		}
	}

	log {
		output stdout
		format console
	}
}